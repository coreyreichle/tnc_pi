sudo apt-get update ; sudo apt-get upgrade -y
sudo apt-get install gpsd-clients git libasound2-dev gpsd libgps-dev build-essential automake libtool texinfo

git clone https://www.github.com/wb2osz/direwolf
git clone git://hamlib.git.sourceforge.net/gitroot/hamlib/hamlib
cd hamlib ; sh autogen.sh && make && make check
sudo make install
cd ../direwolf/
vi Makefile.linux 
make
sudo apt-get install libhamlib libhamlib-dev
make
cd ~/direwolf/
vi Makefile.linux 
make && sudo make install
make install-conf
sudo make install-conf

sudo cp /lib/systemd/system/gpsd.service /etc/systemd/system/gpsd.service
sudo cp /lib/systemd/system/gpsd.socket /etc/systemd/system/gpsd.socket
sudo systemctl daemon-reload
sudo service gpsd restart

wget http://adafruit-download.s3.amazonaws.com/adafruit_hostapd_14128.zip
unzip adafruit_hostapd_14128.zip 
